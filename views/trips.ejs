<%- include("partials/header") %>


<div class="container">
    <p>Click on <strong>View</strong> to display your fellow travellers for that journey...</p>
    <div class="row">
        <% currentUser.trips.forEach(function(trip){ %>
            <div class="col-md-6 mb-3">
                <div class="card">
                    <div class="card-body">
                      <h2 class="card-title"><%= trip.train_name %></h2>
                      <h6 class="card-subtitle mb-2 text-muted">Train No: <%= trip.train_no %></h6>
                      <p class="card-text"><em>Departure</em> : <%= trip.departure || "-" %> ----------- <em>Arrival</em> : <%= trip.arrival || "-" %></p>
                      <a href="#" class="card-link">View</a>
                      <a href="#" class="card-link">Edit</a>
                      <a href="#" class="card-link float-right">Remove</a>
                    </div>
                  </div>
            </div>
        <% }); %>
    </div>
</div>


<%- include("partials/footer") %>
