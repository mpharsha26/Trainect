<%- include("partials/header") %>

<div class="ui main text container p-4 border border-secondary">
  <div class="ui huge header text-center">Edit the details here...</div>
  <form class="ui form" action="/trips/<%= trip._id %>?_method=PUT" method="POST">
    <div class="field">
      <input
        type="text"
        name="roll_no"
        value="<%= currentUser.roll_no %>"
        disabled
      />
    </div>
    <div class="field">
      <input type="text" name="branch" value="<%= currentUser.branch %>" disabled />
    </div>
    <div class="field">
      <input
        type="text"
        name="trip[train_name]"
        value="<%= trip.train_name %>"
        required
      />
    </div>
    <div class="field">
      <input
        type="text"
        name="trip[train_no]"
        value="<%= trip.train_no %>"
        required
      />
    </div>
    <div class="field">
      <label>Date of Travel</label>
      <input type="date" name="trip[date]" value="<%= trip.date %>" required />
    </div>
    <div class="field">
      <input
        type="text"
        name="trip[departure]"
        value="<%= trip.departure %>"
        placeholder="Departing station (optional)"
      />
    </div>
    <div class="field">
      <input
        type="text"
        name="trip[arrival]"
        value="<%= trip.arrival %>"
        placeholder="Arriving station (optional)"
      />
    </div>
    <button class="ui teal big basic button">Edited</button>
  </form>
</div>

<%- include("partials/footer") %>
